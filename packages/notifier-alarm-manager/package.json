{
  "name": "notifier-alarm-manager",
  "version": "0.1.13",
  "description": "Cross-platform native alarm scheduling for React Native with AlarmKit (iOS 26+) and AlarmManager (Android 12+) support, including smart fallbacks",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "npm run --prefix example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "echo 'Skipping build - using source files directly'",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "alarmkit",
    "alarmmanager",
    "alarm",
    "timer",
    "notification",
    "medication-reminder",
    "exact-alarm",
    "background-task"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n8stowell82/react-native-alarmkit.git"
  },
  "author": "Nathan Stowell <n8stowell82@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/n8stowell82/react-native-alarmkit/issues"
  },
  "homepage": "https://github.com/n8stowell82/react-native-alarmkit#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@react-native/eslint-config": "^0.74.0",
    "@release-it/conventional-changelog": "^8.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "babel-jest": "^30.2.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "react-native-builder-bob": "^0.30.0",
    "release-it": "^17.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}